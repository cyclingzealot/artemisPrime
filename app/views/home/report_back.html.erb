<div class="container" style="margin-top: 12%;">
  <h2 style="text-align: center"> Report After Canvassing</h2>

  <%= form_tag report_submit_home_path, method: :post do |f| %>

      <div class="field">
        <%= label_tag :polling_area %><br />
        <%= select_tag :area, options_for_select(@location_options)%>
      </div>

      <div class="field">
        <%= label_tag :notes %><br />
        <%= text_field_tag :notes %>
      </div>

      <div class="actions">
        <%= f.submit "Submit", class: 'btn-primary' %>
      </div>
  <% end %>
</div>
