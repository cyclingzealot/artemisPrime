<!DOCTYPE html>
<html>
  <head>
    <title>ArtemisPrime</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <a class="navbar-brand" href="#">Artemis</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
          <a class="nav-link" href="#"><%= link_to 'Home', home_index_path, class: "nav-link"%> </a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#"><%= link_to 'Report Back', report_back_home_path(current_user.id), class: "nav-link" %></a>
        </li>
        <li class="nav-item pull-right">
          <a class="nav-link" href="#"><%= link_to 'Sign Out', destroy_user_session_path, method: :delete,
                                                   :class => "nav-link" %></a>
        </li>
      </ul>
    </div>
  </nav>

  <body>
    <%= yield %>
  </body>
</html>
